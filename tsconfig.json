{
    "compilerOptions": {
        "resolveJsonModule": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2019", // browser compatibility
        "module": "commonjs", // compatibility
        "esModuleInterop": true, // new imports
        "noImplicitAny": true, // not is any as default
        "declaration": true, // should be true when building package
        "declarationDir": "./lib",
        "outDir": "./lib" // output directory
    },
    "include": ["src"],  // files to be included into compilation
    "exclude": ["node_modules", "__tests__/*"] // excluded files
}
